{% assign ss = section.settings %}
{%- assign collections = section.settings.collectionList -%}
{% assign products = section.settings.productList %}
{% comment %} {%- assign product_limit = section.settings.product_count -%} {% endcomment %}

<section
  id="{{ss.sectionId}}"
  class="walkin-pets"
  style="padding: {{ ss.paddingTop }}px 4% {{ ss.paddingBottom }}px 4%;"
>
  {% if ss.title != blank %}
    <h{{ ss.heading_tag }} class="walkin-pets__title h{{ ss.title_size }}">
      {{- ss.title | newline_to_br -}}
    </h{{ ss.heading_tag }}>
  {% endif %}

  <div class="walkin-pets__overviewSection">
    {% if ss.overview != blank %}
      <p class="walkin-pets__overview">{{ ss.overview }}</p>
    {% endif %}

    {% if ss.buttonText != blank %}
      <a class="walkin-pets__button" href="{{ ss.buttonLink }}">
        {{- ss.buttonText -}}
        <i class="fa-solid fa-arrow-right walkin-pets__button-arrow"></i
      ></a>
    {% endif %}
  </div>

  <div class="walkin-pets__slide-container">
    <div class="glide">
      <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides">
          {% for collection in collections %}
            <li class="glide__slide">
              <a href="{{ collection.url  }}">
                <img src="{{ collection.featured_image | img_url: 'master' }}" alt="Collection featured image">
                <h3>{{ collection.title }}</h3>
                <span>({{ collection.all_products_count }})</span>
                <a href="{{ collection.url }}">View collection</a>
              </a>
            </li>
          {% endfor %}

          {% for product in products %}
            <li class="glide__slide">
              <a href="{{ product.url }}">
                <img
                  class="glide-product-image"
                  src="{{ product.featured_image | img_url: 'master' }}"
                  alt="Collection featured image"
                >
                <h3>{{ product.title }}</h3>
                <span>{{ product.price | money }}</span>
                <p>{{ product.description }}</p>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
          <i class="fa-solid fa-chevron-left"></i>
        </button>
        <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
          <i class="fa-solid fa-chevron-right"></i>
        </button>
      </div>
    </div>
  </div>

  <a class="walkin-pets__button mobile" href="{{ ss.buttonLink }}">
    {{- ss.buttonText -}}
    <i class="fa-solid fa-arrow-right walkin-pets__button-arrow"></i
  ></a>
</section>

{% style %}
  .walkin-pets__button {
      background: {{ ss.buttonColor }};
      color: {{ ss.buttonTextColor }};
  }
  .walkin-pets__button:hover {
      background: {{ ss.buttonHoverColor }} !important;
  }
{% endstyle %}

{% schema %}
{
  "name": "Walkin' Pets",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "This is a section title..."
    },
    {
      "type": "range",
